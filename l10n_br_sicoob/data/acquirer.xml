<odoo>
    <data noupdate="1">
        <record id="payment_acquirer_boleto_sicoob" model="payment.acquirer">
            <field name="name">Boleto Sicoob</field>
            <field name="provider">sicoob-boleto</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="description" type="html">
                <p>
                    Emita boletos via Banco Sicoob. <br />
                    Simplifique seu recebimento, gere o boleto já registrado,
                    envie por email, disponibilize online e receba o pagamento diretamente na sua conta; 
                    sem intermediação*
                </p>
                <ul class="list-inline">
                    <li><i class="fa fa-check"/>eCommerce</li>
                    <li><i class="fa fa-check"/>Botão de pagamento em cotações online</li>
                </ul>
            </field>
        </record>
    </data>
</odoo>
